<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nimpe.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>  <!-- Text color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Nimpe.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight" />
    <style name="Theme.Nimpe.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />
</resources>