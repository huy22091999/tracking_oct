<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorPrimary"
    tools:context=".ui.tracking.DetailTrackingFragment">
    <LinearLayout
        android:layout_marginTop="80dp"
        android:backgroundTint="?attr/colorOnPrimary"
        android:background="@drawable/background_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/layout_infor"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/checkin_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:padding="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/chronometer"/>
                <TextView
                    android:textColor="?attr/textFillColor"
                    android:id="@+id/tracking_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="15:08"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:padding="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_calendar_today_24"
                    app:tint="?attr/colorPrimary" />
                <TextView
                    android:textColor="?attr/textFillColor"
                    android:maxLength="10"
                    android:id="@+id/tracking_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="28-08-2021"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textColor="?attr/textFillColor"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_nimpe_layout"
            android:layout_below="@+id/layout_infor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:textStyle="bold"
            android:text="@string/content_tracking_lable"
            android:id="@+id/content_lable"/>
        <EditText
            android:textColor="?attr/textFillColor"
            android:background="@drawable/background_nimpe_layout"
            android:layout_below="@+id/content_lable"
            android:id="@+id/tracking_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="12dp"
            android:gravity="start"
            android:minLines="10"
            android:inputType="textMultiLine"
            android:text="Phân biệt sốt xuất huyết và phát ban nếu sốt phát ban là một bệnh rất nguy hiểm"
            android:textSize="16sp"
            />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_delete_outline_24"
            app:tint="?attr/colorPrimary" />
    <Button
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/save"
        style="@style/NimpeButtonLogin"
        android:id="@+id/btn_save"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="50dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ellipse"
        />
    <TextView
        android:textColor="?attr/textFillColor"
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/display_name"
        android:textSize="18sp"
        android:textStyle="bold"
      />
    </LinearLayout>

</RelativeLayout>