<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="16dp"
    android:background="@drawable/background_category_layout"
    tools:context=".ui.tracking.DetailTrackingFragment">
    <RelativeLayout
        android:background="@drawable/background_tracking"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/white"
            android:text="@string/content_tracking_lable"
            android:id="@+id/content_lable"/>
        <EditText
            android:layout_below="@+id/content_lable"
            android:id="@+id/tracking_content"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:gravity="start"
            android:minLines="10"
            android:backgroundTint="@color/black"
            android:inputType="textMultiLine"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Phân biệt sốt xuất huyết và phát ban nếu sốt phát ban là một bệnh rất nguy hiểm"
            android:textSize="16sp"
            />
        <LinearLayout
            android:layout_below="@id/tracking_content"
            android:layout_width="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_time"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tracking_content"
                android:text="15:08, 28-08-2021"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
    <Button
        android:backgroundTint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/submit"
        style="@style/NimpeButtonLogin"
        android:id="@+id/btn_save"/>
    <Button
        android:backgroundTint="#BC3F3F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/delete"
        style="@style/NimpeButtonLogin"
        android:id="@+id/btn_delete"/>
    </LinearLayout>
</LinearLayout>