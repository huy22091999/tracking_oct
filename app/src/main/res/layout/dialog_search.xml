<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background1"
    android:paddingTop="30dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    >


    <ImageView
        android:id="@+id/img_back"
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:tint="@color/text_message1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/NimpeInputLayoutLogin"
        app:startIconDrawable="@drawable/baseline_search_24"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/baseline_cancel_24"
        android:layout_toEndOf="@+id/img_back"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:hintEnabled="false"
        android:layout_toStartOf="@+id/tv_search">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:hint="@string/at"
            android:maxLines="1"
            >
            <requestFocus/>
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/search"
        android:textColor="@color/text_title1"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/til_search"/>


    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:visibility="gone"
        android:textSize="30sp"
        android:text="@string/nodata"
        android:textColor="@color/text_message1"
        android:textStyle="bold"
        android:layout_centerInParent="true"
   />

</RelativeLayout>