<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="notification"
            type="com.oceantech.tracking.data.model.Notification" />

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_category_layout"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="20sp"
            android:text="@{notification.title}"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            android:id="@+id/notiTitle"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:text="ABC"
            android:textStyle="italic"
            android:fontFamily="@font/roboto"
            android:id="@+id/notiDate"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp"
            android:text="@{notification.body}"
            android:textStyle="normal"
            android:fontFamily="@font/roboto"
            android:layout_marginBottom="16dp"
            android:id="@+id/notiBody"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


</layout>
