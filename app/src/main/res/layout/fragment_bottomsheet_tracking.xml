<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:tint="@color/text_message1" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_back"
            android:textColor="@color/text_message1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/line_nav_tab"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout_header"
        android:background="@color/background2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_avt"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_below="@+id/layout_header"
        android:layout_margin="10dp"
        android:backgroundTint="@color/background2"
        app:cardCornerRadius="200dp">

        <ImageView
            android:id="@+id/img_avt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tint="@color/text_message1"  />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_header"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/cv_avt"
        android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cv_avt"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/background1"
            android:gravity="top"
            android:hint="@string/did_you_do"
            android:textSize="25sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="50dp"
        android:background="@color/background1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <ImageView
            android:id="@+id/img_up"
            android:layout_width="match_parent"
            android:src="@drawable/baseline_horizontal_rule_24"
            android:layout_height="30dp"
            app:tint="@color/text_message1" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/suggest"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/text_message1"
            android:layout_marginBottom="10dp"/>

        <View
            android:id="@+id/line_up"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/layout_header"
            android:background="@color/background2" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/background2"
            android:dividerHeight="1dp"
            />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>