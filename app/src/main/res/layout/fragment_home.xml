<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/background_nimpe_layout"
                android:backgroundTint="?attr/colorBackgroundFloating"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ellipse" />

                <LinearLayout
                    android:id="@+id/layout_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_avatar"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/display_name_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/display_name"
                        android:textColor="?attr/textFillColor"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/level_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/year"
                        android:textColor="?attr/textFillColor"
                        android:textSize="16sp" />
                </LinearLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/baseline_add_24"
                    app:backgroundTint="@color/white" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:weightSum="8">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/baseline_calendar_today_24"
                    app:tint="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/month"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="August"
                    android:textColor="@color/text_color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_calendar_back"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:background="@null"
                    android:src="@drawable/baseline_navigate_before_24" />

                <ImageButton
                    android:id="@+id/btn_calendar_next"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:background="@null"
                    android:src="@drawable/baseline_navigate_next_24" />
            </LinearLayout>

            <com.github.sundeepk.compactcalendarview.CompactCalendarView
                android:id="@+id/compactcalendar_view"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:compactCalendarBackgroundColor="@android:color/transparent"
                app:compactCalendarCurrentDayBackgroundColor="#689F38"
                app:compactCalendarCurrentSelectedDayBackgroundColor="#73D8E5"
                app:compactCalendarMultiEventIndicatorColor="?attr/colorPrimary"
                app:compactCalendarTargetHeight="250dp"
                app:compactCalendarTextColor="@color/text_color"
                app:compactCalendarTextSize="12sp" />
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/content_statistical"
                layout="@layout/content_statistical"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>