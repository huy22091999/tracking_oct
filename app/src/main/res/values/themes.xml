<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nimpe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#00000000</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <style name="Theme.Nimpe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Nimpe.AppBarOverlay" parent="Theme.AppCompat.DayNight">
        <item name="backgroundTint">@color/white</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
    </style>
    <style name="Theme.Nimpe.PopupOverlay" parent="Theme.AppCompat.DayNight">
        <item name="backgroundTint">@color/white</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
    </style>

    <style name="TrackingDrawer" parent="Theme.AppCompat.DayNight">
        <item name="backgroundTint">@color/white</item>
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
    </style>

    <style name="TrackingText">
        <item name="android:textColor">@color/gray</item>
        <item name="iconTint">@color/gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="background">@drawable/background_tracking_popup</item>
    </style>

    <style name="TrackingPopup">
        <item name="background">@color/popup_light</item>
    </style>

    <style name="TrackingFragment" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/background_light</item>
        <item name="textInputStyle">@style/TrackingTextInputStyle</item>
    </style>

    <style name="TrackingProfile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@drawable/background_profile</item>
    </style>

    <style name="TrackingItem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SpinnerInputLayoutLogin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="background">@drawable/background_spinner</item>
    </style>

    <style name="TrackingInputLayoutLogin" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxStrokeColor">@color/boxstroke_outline</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>