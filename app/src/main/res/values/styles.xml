<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NimpeInputLayoutLogin" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxStrokeColor">@color/boxstroke_outline</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="NimpeButtonLogin">
        <item name="cornerRadius">24dp</item>
    </style>
    <style name="NimpeButtonProfile">
        <item name="android:backgroundTint">@color/background2</item>
    </style>
    <style name="stylePopup" parent="Base.Widget.AppCompat.PopupMenu">
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">20dp</item>
        <item name="android:dropDownWidth">100dp</item>
        <item name="android:width">100dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_to_top</item>
    </style>

    <style name="StyleDialog_Full_screen_animation" parent="android:Theme.DeviceDefault.Light.NoActionBar.TranslucentDecor">
<!--        <item name="android:windowAnimationStyle">@style/Animation</item>-->
    </style>

    <style name="Animation">
        <item name="android:windowEnterAnimation">@anim/enter_from_right</item>
        <item name="android:windowExitAnimation">@anim/enter_from_left</item>
    </style>

    <style name="TintedNavigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
    <item name="tint">@color/text_message1</item>
    </style>
</resources>