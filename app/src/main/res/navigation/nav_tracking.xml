<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_tracking"
    app:startDestination="@id/nav_trackingFragment">

    <fragment
        android:id="@+id/nav_trackingFragment"
        android:name="com.oceantech.tracking.ui.tracking.TrackingFragment"
        android:label="@string/menu_tracking"
        tools:layout="@layout/fragment_tracking">
        <action
            android:id="@+id/action_nav_trackingFragment_to_notificationFragment"
            app:destination="@id/nav_notificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_notificationFragment"
        android:name="com.oceantech.tracking.ui.notification.NotificationFragment"
        android:label="@string/notification"
        tools:layout="@layout/fragment_notification" />
</navigation>