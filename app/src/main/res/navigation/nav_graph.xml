<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_allTrackingFragment">

    <fragment
        android:id="@+id/nav_allTrackingFragment"
        android:name="com.oceantech.tracking.ui.tracking.TrackingFragment"
        android:label="fragment_all_tracking"
        tools:layout="@layout/fragment_tracking" >
        <action
            android:id="@+id/action_nav_allTrackingFragment_to_nav_trackingFragment"
            app:destination="@id/nav_trackingFragment" />
        <action
            android:id="@+id/action_nav_allTrackingFragment_to_nav_timeSheetFragment"
            app:destination="@id/nav_timeSheetFragment" />
        <action
            android:id="@+id/action_nav_allTrackingFragment_to_userFragment"
            app:destination="@id/nav_userFragment" />
        <action
            android:id="@+id/action_nav_allTrackingFragment_to_myProfileFragment"
            app:destination="@id/nav_myProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_trackingFragment"
        android:name="com.oceantech.tracking.ui.tracking.AddOrUpTrackFragment"
        android:label="fragment_tracking"
        tools:layout="@layout/fragment_add_or_up_tracking" >
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="content"
            app:argType="string"
            android:defaultValue='" "' />
        <action
            android:id="@+id/action_nav_trackingFragment_to_nav_allTrackingFragment"
            app:destination="@id/nav_allTrackingFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_timeSheetFragment"
        android:name="com.oceantech.tracking.ui.timesheet.TimeSheetFragment"
        android:label="fragment_time_sheet"
        tools:layout="@layout/fragment_time_sheet" >
    </fragment>
    <fragment
        android:id="@+id/nav_userFragment"
        android:name="com.oceantech.tracking.ui.user.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" >
        <action
            android:id="@+id/action_nav_userFragment_to_detailUserFragment"
            app:destination="@id/nav_detailUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_detailUserFragment"
        android:name="com.oceantech.tracking.ui.user.DetailUserFragment"
        android:label="fragment_detail_user"
        tools:layout="@layout/fragment_detail_user" >
        <action
            android:id="@+id/action_detailUserFragment_to_nav_userFragment"
            app:destination="@id/nav_userFragment" />
        <argument
            android:name="info_user"
            app:argType="com.oceantech.tracking.data.model.User" />
        <action
            android:id="@+id/action_nav_detailUserFragment_to_updateProfileFragment"
            app:destination="@id/nav_updateProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_myProfileFragment"
        android:name="com.oceantech.tracking.ui.profile.MyProfileFragment"
        android:label="fragment_my_profile"
        tools:layout="@layout/fragment_my_profile" >
        <action
            android:id="@+id/action_nav_myProfileFragment_to_updateProfileFragment"
            app:destination="@id/nav_updateProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_updateProfileFragment"
        android:name="com.oceantech.tracking.ui.profile.UpdateProfileFragment"
        android:label="fragment_update_profile"
        tools:layout="@layout/fragment_update_profile" >
        <action
            android:id="@+id/action_updateProfileFragment_to_nav_detailUserFragment"
            app:destination="@id/nav_detailUserFragment" />
        <action
            android:id="@+id/action_updateProfileFragment_to_nav_myProfileFragment"
            app:destination="@id/nav_myProfileFragment" />
        <action
            android:id="@+id/action_updateProfileFragment_to_nextUpdateFragment"
            app:destination="@id/nav_nextUpdateFragment" />
        <argument
            android:name="user"
            app:argType="com.oceantech.tracking.data.model.User" />
    </fragment>
    <fragment
        android:id="@+id/nav_nextUpdateFragment"
        android:name="com.oceantech.tracking.ui.profile.NextUpdateFragment"
        android:label="fragment_next_update"
        tools:layout="@layout/fragment_next_update" >
        <action
            android:id="@+id/action_nextUpdateFragment_to_nav_myProfileFragment"
            app:destination="@id/nav_myProfileFragment" />
        <action
            android:id="@+id/action_nextUpdateFragment_to_nav_detailUserFragment"
            app:destination="@id/nav_detailUserFragment" />
        <argument
            android:name="user"
            app:argType="com.oceantech.tracking.data.model.User" />
    </fragment>
</navigation>