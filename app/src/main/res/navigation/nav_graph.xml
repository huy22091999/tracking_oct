<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_HomeFragment">

    <fragment
        android:id="@+id/nav_HomeFragment"
        android:name="com.oceantech.tracking.ui.home.HomeFragment"
        android:label="@string/fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_HomeFragment_to_trackingFragment"
            app:destination="@id/trackingFragment" />
        <action
            android:id="@+id/action_nav_HomeFragment_to_timeSheetFragment"
            app:destination="@id/timeSheetFragment" />
        <action
            android:id="@+id/action_nav_HomeFragment_to_personalFragment"
            app:destination="@id/personalFragment" />
        <action
            android:id="@+id/action_nav_HomeFragment_to_publicFragment"
            app:destination="@id/publicFragment" />
        <action
            android:id="@+id/action_nav_HomeFragment_to_userInfoFragment"
            app:destination="@id/userInfoFragment" />
        <action
            android:id="@+id/action_nav_HomeFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/trackingFragment"
        android:name="com.oceantech.tracking.ui.tracking.TrackingFragment"
        android:label="@string/fragment_tracking"
        tools:layout="@layout/fragment_tracking" />
    <fragment
        android:id="@+id/timeSheetFragment"
        android:name="com.oceantech.tracking.ui.timesheets.TimeSheetFragment"
        android:label="@string/fragment_time_sheet"
        tools:layout="@layout/fragment_time_sheet" />
    <fragment
        android:id="@+id/personalFragment"
        android:name="com.oceantech.tracking.ui.personal.PersonalFragment"
        android:label="@string/personal_information"
        tools:layout="@layout/fragment_personal" >
        <action
            android:id="@+id/action_personalFragment_to_modifyPersonalFragment"
            app:destination="@id/modifyPersonalFragment" />
    </fragment>
    <fragment
        android:id="@+id/publicFragment"
        android:name="com.oceantech.tracking.ui.information.InfoFragment"
        android:label="@string/app_information"
        tools:layout="@layout/fragment_info" />
    <fragment
        android:id="@+id/userInfoFragment"
        android:name="com.oceantech.tracking.ui.home.user.UserInfoFragment"
        android:label="@string/user_info"
        tools:layout="@layout/fragment_user_info">
        <action
            android:id="@+id/action_userInfoFragment_to_modifyUserFragment"
            app:destination="@id/modifyUserFragment" />


    </fragment>
    <fragment
        android:id="@+id/modifyUserFragment"
        android:name="com.oceantech.tracking.ui.home.user.ModifyUserFragment"
        android:label="@string/update_user"
        tools:layout="@layout/fragment_modify_user">
    </fragment>
    <fragment
        android:id="@+id/modifyPersonalFragment"
        android:name="com.oceantech.tracking.ui.personal.ModifyPersonalFragment"
        android:label="@string/update_profile"
        tools:layout="@layout/fragment_modify_personal" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.oceantech.tracking.ui.notifications.NotificationFragment"
        android:label="@string/notification"
        tools:layout="@layout/fragment_notification" />

</navigation>