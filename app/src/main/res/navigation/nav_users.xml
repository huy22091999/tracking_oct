<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_users"
    android:label="@string/menu_users"
    app:startDestination="@id/nav_usersFragment">

    <fragment
        android:id="@+id/nav_usersFragment"
        android:name="com.oceantech.tracking.ui.users.UsersFragment"
        android:label="@string/fragment_users"
        tools:layout="@layout/fragment_users">

        <action
            android:id="@+id/action_nav_usersFragment_to_NextUpdateFragment"
            app:destination="@id/nav_nextUpdateFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_nextUpdateFragment"
        android:name="com.oceantech.tracking.ui.users.NextUpdateFragment"
        android:label="fragment_information"
        tools:layout="@layout/fragment_next_update">

        <argument
            android:name="ReviveUser1"
            app:argType="com.oceantech.tracking.data.model.User" />
        <argument
            android:name="isAdmin"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>
</navigation>